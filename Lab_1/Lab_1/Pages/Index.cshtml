@page
@model Lab_1.Pages.IndexModel
@{
    ViewData["Title"] = "Cookie Monster";
}

<div style="text-align: center; padding: 60px; font-family: 'Segoe UI', sans-serif;">
    <img src="/images/cookie_monster.png" alt="Cookie Monster" style="width: 250px; margin-bottom: 20px;" />
    <h1 style="color: #1e90ff;">Cookie Monster 🍪</h1>
    <p style="font-size: 24px;">@Model.CookieCount cookies, yum yum!</p>

    <form method="post">
        <button class="btn btn-primary">Eat a cookie</button>
    </form>
</div>
